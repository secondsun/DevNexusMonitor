<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:padding="0px"
    tools:context="org.devnexus.devnexusmonitor.DevNexusMonitor">


    <TextView
        android:id="@+id/screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        style="@style/roomTitle"
        android:layout_marginRight="5px"
        android:text="Room or Track Name" />

    <ImageView
        android:id="@+id/devnexus_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5px"
        android:src="@drawable/dn_logo"
        android:layout_alignBottom="@+id/screen_title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/schedule_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5px"
        android:layout_alignParentStart="true"
        android:columnCount="4"
        android:overScrollMode="never"
        android:rowCount="2"
        android:layout_below="@+id/devnexus_logo">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
